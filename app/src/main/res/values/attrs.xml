<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomEditText">
        <attr name="title" format="string"/>
        <attr name="titleColor" format="color"/>
        <attr name="titleSize" format="dimension"/>
        <attr name="titleFont" format="reference"/>
        <attr name="titleBackgroundColor" format="color"/>
        <attr name="titlePaddingStart" format="dimension"/>
        <attr name="titlePaddingEnd" format="dimension"/>

        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textFont" format="reference"/>
        <attr name="maxLength" format="integer"/>
        <attr name="textStartPadding" format="dimension"/>
        <attr name="textTopPadding" format="dimension"/>
        <attr name="textEndPadding" format="dimension"/>
        <attr name="textBottomPadding" format="dimension"/>
        <attr name="inputType" format="enum">
            <enum name="text" value="0"/>
            <enum name="number" value="1"/>
        </attr>

        <attr name="borderColor" format="color"/>
        <attr name="borderWidth" format="dimension"/>
        <attr name="borderRadius" format="dimension"/>

    </declare-styleable>

</resources>